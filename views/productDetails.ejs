<!DOCTYPE html>
<html lang="en">

<html>
  <head>
      <%- include('./partials/head') %>
      <script src="/js/productDetails.js" type="text/javascript"></script>
  </head>
  <body>
    <%- include('./partials/header') %>
      <main class="main">
        <!--sección general del producto-->
        <section class="seccionGeneralProducto">
          <!--sección imágenes del producto-->
          <section class="seccionImagenesDelProducto">
            <!--Sección imagen grande del producto-->
            <section class="seccionImagenPrincipalProducto">
              <div class="divLeftArrowArticuloImagenPrincipalProducto">
                <i class="fa-regular fa-square-caret-left iconoFlecha"></i>
              </div>
              <img src="/images/productos/<%= producto.IMAGEN %>" class="imagenPrincipalDelProducto" />
              <div class="divRightArrowArticuloImagenPrincipalProducto">
                <i class="fa-regular fa-square-caret-right iconoFlecha"></i>
              </div>
            </section>
            <!--Sección imagenes pequeñas del producto-->
            <!--
            <section class="seccionImagenesAdicionalesProducto">
              <article class="articuloImagenAdicionalProducto">
                <img src="/images/productos/<%= producto.IMAGEN %>" class="imagenAdicionalDelProducto" />
              </article>
              <article class="articuloImagenAdicionalProducto">
                <img src="/images/productos/<%= producto.IMAGEN %>" class="imagenAdicionalDelProducto" />
              </article>
              <article class="articuloImagenAdicionalProducto">
                <img src="/images/productos/<%= producto.IMAGEN %>" class="imagenAdicionalDelProducto" />
              </article>
            </section>
            -->
          </section>
          <!--sección descripción y add to cart del producto-->
          <section class="seccionDescripcionYAddToCartDelPropducto">
            <!--sección de descripción del producto-->
            <section class="seccionDescripcionDelProducto">
              <header class="headerDescripcionDelProducto">
                <h1 id="producto-nombre">
                  <%= producto.NOMBRE %>
                </h1>
              </header>
              <!--articulo para describir el producto-->
              <article class="articuloDescripcionDelProducto">
                <p id="producto-descripcion">
                  <% if (producto.DESCRIPCION !==null) {%>
                    <%= producto.DESCRIPCION %>
                      <% }else{ %>
                        "Descripción del producto ...";
                        <% } %>
                </p>
              </article>
              <!--Precion del producto-->
              <article class="articlePrecioProducto">
                <p style="display:inline">$</p><p id="producto-precio" style="display:inline"><%= producto.PRECIO %> </p>
              </article>
            </section>
            <!--sección de adicionar a tarjeta-->
            <section class="seccionAdicionarATarjeta">
              <article class="articuloAdicionarATarjeta">
                <button class="botonAddToCart" id="boton-restar">-</button>
                <input size="15" id="producto-cantidad" value="1" type="number"/>
                <button class="botonAddToCart" id="boton-sumar">+</button>
              </article>
              <article class="articuloAdicionarATarjeta">
                <button class="boton" id="but-add-art">ADD TO CART</button>
                <button class="boton">VIEW CART</button>
              </article>
              <div style="display:none">
                  <input type="text" value="<%= producto.ID %>" id="producto-id"></input>
              </div>
            </section>
          </section>
        </section>
      </main>
      <%- include('./partials/footer') %>
        <p style="text-align:left">Copyright &copy; 2023 Convenciones Internacionales S.R.L.</p>

  </body>


</html>