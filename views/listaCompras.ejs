<!DOCTYPE html>
<html>
    <head>
        <%- include('./partials/head') %>
        <link rel="stylesheet" href="/css/stylescart.css" >
    </head>
<body>
        <%- include('./partials/header') %>
    <main>

        <h1 class="headerDescripcionDelProducto headerPrincipal"><br>COMPRAS RECIENTES<br><br></h1>
        
            <% for( i = 0 ; i < comprasData.length ; i++) { %>
                <% console.log('Orden = ' + (i + 1)) %>
            <hr>
            <div class="mostradorOrden" id="mostrador-orden-<%= i %>">
                <section class="seccionCartHeader">
                    <header class="col1">PRODUCTO</header>            
                    <header class="col2">PRECIO</header>
                    <header class="col3">CANTIDAD</header>
                    <header class="col4">TOTAL</header>
                    <!--<header class="col5">ELIMINAR</header>-->
                </section>

                
                <div id="carritoContenedorProductos" class="max-width-800">
                    <% for (b = 0 ; b < comprasData[i].articulos.length ; b++) { %>
                    <section class="seccionCartL1" id="carrito-product-row-<%= b + 1 %>">
                        <!--sección de descripción del producto-->
                        <section class="seccionDescripcionDelProducto cartTableCell col1">
                            <!--header para el nombre del producto-->
                            <header class="headerDescripcionDelProducto cartTableCellDescL1">
                                <p id="producto-nombre-<%= b + 1 %>">
                                    <%= comprasData[i].articulos[b].producto_nombre %>
                                </p>
                            </header>
                            <!--articulo para describir el producto-->
                            <article class="articuloDescripcionDelProducto">
                                <p id="producto-descripcion-<%= b %>">
                                    <%= comprasData[i].articulos[b].producto_descripcion %>
                                </p>
                            </article>
                        </section>
                        <!--Precios y cantidades compradas del producto-->
                        <article class="articlePrecioProducto cartTableCell col2">
                            <p style="display:inline">$</p>
                            <p id="producto-precio-<%= b %>" style="display:inline">
                                <%= comprasData[i].articulos[b].precio %>
                            </p>
                        </article>    
                        <article class="articlePrecioProducto cartTableCell col3">
                            <p id="producto-cantidad-<%= b %>" style="display:inline">
                                <%= comprasData[i].articulos[b].cantidad %>
                            </p>
                        </article>  
                        <article class="articlePrecioProducto cartTableCell col4">
                            <p style="display:inline">$</p>
                            <p id="producto-total-<%= b %>" style="display:inline">
                                <%= comprasData[i].articulos[b].total %>
                            </p>
                        </article> 
               
                    </section>
                    <br>
                    <br>
                    <% } %>
                </div>
            </div>
            <% } %>
    </main>
    <footer>
        <%- include('./partials/footer') %>
    </footer>
</body>

</html>
